{% extends "html/base.html.twig" %}

{% block breadcrumbs %}
    <li>
        <div class="flex items-center">
            <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path></svg>
            <a href="#" data-router-navigate="monthly-stats" class="ml-1 text-gray-700 hover:text-primary-600 md:ml-2 dark:text-gray-300 dark:hover:text-white">Monthly stats</a>
        </div>
    </li>
{% endblock %}
{% block content %}
    {% autoescape false %}
        <!-- MONTHLY STATS -->
        <div class="grid grid-cols-1 mb-4">
            <div class="p-4 bg-white border border-gray-200 rounded-lg shadow-sm dark:border-gray-700 sm:p-6 dark:bg-gray-800">
                <div class="relative overflow-x-auto">
                    <table class="w-full text-sm text-center text-gray-500 dark:text-gray-400">
                        <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                        <tr>
                            <th scope="col" class="px-2 py-3 sticky left-0 bg-gray-50 dark:bg-gray-700">

                            </th>
                            <th scope="col" class="px-2 py-3">
                                # workouts
                            </th>
                            <th scope="col" class="px-2 py-3">
                                <div class="flex items-center justify-center">
                                    {{ renderSvg('distance') }}
                                </div>
                            </th>
                            <th scope="col" class="px-2 py-3">
                                <div class="flex items-center justify-center">
                                    {{ renderSvg('elevation') }}
                                </div>
                            </th>
                            <th scope="col" class="px-2 py-3">
                                <div class="flex items-center justify-center">
                                    {{ renderSvg('time') }}
                                </div>
                            </th>
                            <th scope="col" class="px-2 py-3">
                                <div class="flex items-center justify-center">
                                    {{ renderSvg('calories') }}
                                </div>
                            </th>
                            <th scope="col" class="px-2 py-3">
                                <div class="flex items-center justify-center">
                                    {{ renderSvg('challenge') }}
                                </div>
                            </th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for statistic in monthlyStatistics.getStatistics() %}
                            <tr class="{{ cycle(['bg-white border-b dark:bg-gray-900 dark:border-gray-700', 'border-b bg-gray-50 dark:bg-gray-800 dark:border-gray-700'], loop.index0) }}">
                                <th scope="row" class="sticky left-0 w-36 px-2 py-2 text-right font-medium text-gray-900 whitespace-nowrap dark:text-white {{ cycle(['bg-white dark:bg-gray-900', 'bg-gray-50 dark:bg-gray-800'], loop.index0) }}">
                                    <a href="#" data-model-content-url="month/month-{{ statistic.id }}.html" class="text-blue-600 dark:text-blue-500 hover:underline">
                                        {{ statistic.month }}
                                    </a>
                                </th>
                                <td class="px-2 py-2 truncate">
                                    {{ statistic.numberOfWorkouts }}
                                </td>
                                <td class="px-2 py-2 truncate">
                                    {{ renderComponent('measurement', {'measurement': statistic.totalDistance, 'precision': 0}) }}
                                </td>
                                <td class="px-2 py-2 truncate">
                                    {{ renderComponent('measurement', {'measurement': statistic.totalElevation, 'precision': 0}) }}
                                </td>
                                <td class="px-2 py-2 truncate">
                                    {{ statistic.movingTime }}
                                </td>
                                <td class="px-2 py-2 truncate">
                                    {{ statistic.totalCalories|formatNumber(0) }}<span class="text-xs">kcal</span>
                                </td>
                                <td class="px-2 py-2 truncate">
                                    {{ statistic.challengesCompleted }}
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                        <tfoot>
                        {% for activityType in enum('App\\Domain\\Strava\\Activity\\ActivityType').cases %}
                            {% set totalsForActivityType =  monthlyStatistics.getTotalsForActivityType(activityType) %}
                            <tr class="font-semibold text-gray-900 dark:text-white {{ loop.first ? 'border-t-4 dark:border-gray-700' : '' }}">
                                <td class="px-2 py-2 text-right sticky left-0 bg-white dark:bg-gray-800">
                                    {{ activityType.value }}
                                </td>
                                <td class="px-2 py-2">
                                    {{ totalsForActivityType.numberOfWorkouts }}
                                </td>
                                <td class="px-2 py-2">
                                    {{ renderComponent('measurement', {'measurement':  totalsForActivityType.totalDistance, 'precision': 0}) }}
                                </td>
                                <td class="px-2 py-2">
                                    {{ renderComponent('measurement', {'measurement':  totalsForActivityType.totalElevation, 'precision': 0}) }}
                                </td>
                                <td class="px-2 py-2">
                                    {{ totalsForActivityType.movingTime }}
                                </td>
                                <td class="px-2 py-2">
                                    {{ totalsForActivityType.totalCalories|formatNumber(0) }}<span class="text-xs">kcal</span>
                                </td>
                                <td class="px-2 py-2">
                                </td>
                            </tr>
                        {% endfor %}
                        <tr class="font-semibold text-gray-900 dark:text-white">
                            <td class="px-2 py-2 text-right sticky left-0 bg-white dark:bg-gray-800">
                                TOTAL
                            </td>
                            <td class="px-2 py-2">
                                {{ monthlyStatistics.getTotals().numberOfWorkouts }}
                            </td>
                            <td class="px-2 py-2">
                                {{ renderComponent('measurement', {'measurement':  monthlyStatistics.getTotals().totalDistance, 'precision': 0}) }}
                            </td>
                            <td class="px-2 py-2">
                                {{ renderComponent('measurement', {'measurement':  monthlyStatistics.getTotals().totalElevation, 'precision': 0}) }}
                            </td>
                            <td class="px-2 py-2">
                                {{ monthlyStatistics.getTotals().movingTime }}
                            </td>
                            <td class="px-2 py-2">
                                {{ monthlyStatistics.getTotals().totalCalories|formatNumber(0) }}<span class="text-xs">kcal</span>
                            </td>
                            <td class="px-2 py-2">
                            </td>
                        </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    {% endautoescape %}
{% endblock %}